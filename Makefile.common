	$(CORE_DIR)/deps/luasocket/src/buffer.c \
	$(CORE_DIR)/deps/luasocket/src/compat.c \
	$(CORE_DIR)/deps/luasocket/src/except.c \
	$(CORE_DIR)/deps/luasocket/src/inet.c \
